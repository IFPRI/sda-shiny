doi = "http://dx.doi.org/10.1016/S0167-1987(02)00141-1",
url = "http://www.sciencedirect.com/science/article/pii/S0167198702001411",
author = "Jonne Rodenburg and Alfred Stein and Meine van Noordwijk and Quirine M. Ketterings",
keywords = "Soil run-off",
