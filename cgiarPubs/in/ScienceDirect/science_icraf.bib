url = "http://www.sciencedirect.com/science/article/pii/S0167880906004506",
author = "Thomas P. Tomich and Dagmar W. Timmer and Sandra J. Velarde and Julio Alegre and Veronika Areskoug and David W. Cash and Andrea Cattaneo and Polly Ericksen and Laxman Joshi and Joyce Kasyoki and Christopher Legg and Marilia Locatelli and Daniel Murdiyarso and Cheryl Palm and Roberto Porro and Alejandro Rescia Perazzo and Angel Salazar-Vega and Meine van Noordwijk and Stephan Weise and Douglas White",
keywords = "Tropical forest margins",
