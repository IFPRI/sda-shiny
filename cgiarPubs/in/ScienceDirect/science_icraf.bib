url = "http://www.sciencedirect.com/science/article/pii/S2095311913606498",
author = "Ravi Prakash Singh and Sybil Herrera-Foessel and Julio Huerta-Espino and Sukhwinder Singh and Sridhar Bhavani and Caixia Lan and Bhoja Raj Basnet",
keywords = "Triticum aestivum",
