note = "",
issn = "0308-521X",
doi = "http://dx.doi.org/10.1016/j.agsy.2008.11.003",
url = "http://www.sciencedirect.com/science/article/pii/S0308521X08001297",
author = "Liangzhi You and Stanley Wood and Ulrike Wood-Sichra",
keywords = "Sub-Sahara Africa",
