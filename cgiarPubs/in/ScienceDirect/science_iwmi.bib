doi = "http://dx.doi.org/10.1016/j.agee.2008.01.014",
url = "http://www.sciencedirect.com/science/article/pii/S0167880908000169",
author = "Robert J. Zomer and Antonio Trabucco and Deborah A. Bossio and Louis V. Verchot",
keywords = "Climate change",
keywords = "Afforestation",
