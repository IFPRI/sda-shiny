pages = "93 - 103",
year = "2014",
note = "",
issn = "0034-4257",
doi = "http://dx.doi.org/10.1016/j.rse.2014.04.025",
url = "http://www.sciencedirect.com/science/article/pii/S003442571400176X",
author = "W.W. Immerzeel and P.D.A. Kraaijenbrink and J.M. Shea and A.B. Shrestha and F. Pellicciotti and M.F.P. Bierkens and S.M. de Jong",
keywords = "UAV",
