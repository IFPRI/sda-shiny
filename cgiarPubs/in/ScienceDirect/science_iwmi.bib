url = "http://www.sciencedirect.com/science/article/pii/S0167198710001376",
author = "B. Junge and L. Mabit and G. Dercon and D.E. Walling and R. Abaidoo and D. Chikoye and K. Stahr",
keywords = "Nigeria",
