note = "",
issn = "0378-3774",
doi = "http://dx.doi.org/10.1016/j.agwat.2007.09.014",
url = "http://www.sciencedirect.com/science/article/pii/S0378377407002429",
author = "A.S. Qureshi and P.G. McCornick and M. Qadir and Z. Aslam",
keywords = "Pakistan",
keywords = "Salt-affected soils",
