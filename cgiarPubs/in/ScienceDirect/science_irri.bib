issn = "0378-4290",
doi = "http://dx.doi.org/10.1016/j.fcr.2011.01.004",
url = "http://www.sciencedirect.com/science/article/pii/S0378429011000244",
author = "O.P. Choudhary and B.S. Ghuman and Bijay-Singh and N. Thuy and R.J. Buresh",
