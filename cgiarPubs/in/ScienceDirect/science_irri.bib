url = "http://www.sciencedirect.com/science/article/pii/S116103011400121X",
author = "K.P. Devkota and J.P.A. Lamers and A.M. Manschadi and M. Devkota and A.J. McDonald and P.L.G. Vlek",
keywords = "Dry seeded rice (DSR)",
