@article{Henry2011205,
title = "Variation in root system architecture and drought response in rice (Oryza sativa): Phenotyping of the OryzaSNP panel in rainfed lowland fields ",
journal = "Field Crops Research ",
volume = "120",
number = "2",
pages = "205 - 214",
