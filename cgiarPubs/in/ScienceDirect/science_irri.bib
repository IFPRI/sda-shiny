url = "http://www.sciencedirect.com/science/article/pii/S0378429007001438",
author = "Jianliang Huang and Fan He and Kehui Cui and Roland J. Buresh and Bo Xu and Weihua Gong and Shaobing Peng",
keywords = "Agronomic-N use efficiency",
keywords = "Fixed-time adjustable-dose N management",
keywords = "Grain yield",
