url = "http://www.sciencedirect.com/science/article/pii/S0378429014003360",
author = "Mahesh K. Gathala and Jagadish Timsina and Md. Saiful Islam and Md. Mahbubur Rahman and Md. Israil Hossain and Md. Harun-Ar-Rashid and Anup K. Ghosh and Timothy J. Krupnik and Thakur P. Tiwari and Andrew McDonald",
keywords = "Conservation agriculture",
