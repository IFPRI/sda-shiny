url = "http://www.sciencedirect.com/science/article/pii/S037842909800077X",
author = "Jifeng Ying and Shaobing Peng and Qingrui He and Hong Yang and Chongdang Yang and Romeo M Visperas and Kenneth G Cassman",
keywords = "Crop growth rate",
