url = "http://www.sciencedirect.com/science/article/pii/S0378377414000213",
author = "Ma. Carmelita R. Alberto and James R. Quilty and Roland J. Buresh and Reiner Wassmann and Sam Haidar and Teodoro Q. Correa Jr. and Joseph M. Sandro",
keywords = "Maize",
