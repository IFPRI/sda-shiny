url = "http://www.sciencedirect.com/science/article/pii/S0378429099000453",
author = "A Wihardjaka and G.J.D Kirk and S Abdulrachman and C.P Mamaril",
keywords = "Non-exchangeable potassium",
keywords = "Nutrient balance",
