url = "http://www.sciencedirect.com/science/article/pii/S0308521X06000825",
author = "A.A. Boling and B.A.M. Bouman and T.P. Tuong and M.V.R. Murty and S.Y. Jatmiko",
keywords = "Crop modelling",
