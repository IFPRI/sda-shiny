url = "http://www.sciencedirect.com/science/article/pii/S0261219413002500",
author = "Bhagirath S. Chauhan and Anuruddhika S.K. Abeysekera and Manoja S. Wickramarathe and Sakinda D. Kulatunga and Upali B. Wickrama",
keywords = "Clean seed",
