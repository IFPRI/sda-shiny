url = "http://www.sciencedirect.com/science/article/pii/S1364815204000271",
author = "R.P. Roetter and C.T. Hoanh and A.G. Laborte and H. Van Keulen and M.K. Van Ittersum and C. Dreiser and C.A. Van Diepen and N. De Ridder and H.H. Van Laar",
keywords = "Land use planning",
