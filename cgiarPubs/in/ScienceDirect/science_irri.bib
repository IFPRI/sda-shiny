author = "A. Dobermann",
abstract = "By 2020, average irrigated rice yields must rise by 30% to about 7 t ha–1. This increase appears achievable, but requires that improved germplasm with a yield potential of 12 t ha–1 in the dry season and 8–91 ha–1 in the wet season become available within the next 10 years. Moreover, significant improvements in soil and crop management are necessary, particularly nutrient and pest management, to lift average farm yields to about 70% of the yield potential. All this must be achieved in an environment where changes in crop management practices will occur, mainly triggered and driven by socioeconomic changes and competition for natural and human resources. Beyond 2020, further yield increases will probably require germplasm with greater radiation-use efficiency approaching that of plants with \{C4\} photosynthesis. "
}
@article{Feuillette2003413,
title = "SINUSE: a multi-agent model to negotiate water demand management on a free access water table ",
journal = "Environmental Modelling & Software ",
volume = "18",
