@article{Morris199033,
title = "Effects of crop proportion on intercropped upland rice and cowpea 1. Grain yields ",
journal = "Field Crops Research ",
volume = "24",
number = "1–2",
pages = "33 - 49",
year = "1990",
note = "",
issn = "0378-4290",
