number = "",
pages = "70 - 76",
year = "2015",
note = "Special Section on "Selected papers from the 3rd Africa Rice Congress " ",
issn = "2211-9124",
doi = "http://dx.doi.org/10.1016/j.gfs.2014.10.001",
