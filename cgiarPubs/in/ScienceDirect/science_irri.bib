pages = "69 - 77",
year = "2015",
note = "",
issn = "0168-1923",
doi = "http://dx.doi.org/10.1016/j.agrformet.2015.04.029",
url = "http://www.sciencedirect.com/science/article/pii/S0168192315001422",
