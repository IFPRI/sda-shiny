@article{Singh200912,
title = "Responses of \{SUB1\} rice introgression lines to submergence in the field: Yield and grain quality ",
journal = "Field Crops Research ",
volume = "113",
number = "1",
pages = "12 - 23",
year = "2009",
note = "",
issn = "0378-4290",
